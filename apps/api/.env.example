# RAG Chatbot Configuration
# Copy this file to .env and configure

# =============================================================================
# Application
# =============================================================================
APP_NAME=RAG Chatbot API
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=dev

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Database (PostgreSQL + pgvector)
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ragchat

# =============================================================================
# LLM Provider
# Options: openai, ollama
# =============================================================================
LLM_PROVIDER=openai

# OpenAI-compatible settings
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Ollama settings (local mode)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# =============================================================================
# Embedding Provider
# =============================================================================
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# =============================================================================
# Voice (STT/TTS) - Stub for v0.1
# Options: stub, whisper (TODO), openai (TODO)
# =============================================================================
STT_PROVIDER=stub
TTS_PROVIDER=stub

# =============================================================================
# Admin Authentication
# TBD-L0-003: Using Basic Auth for v0.1
# CHANGE THESE IN PRODUCTION!
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_CHAT=30
RATE_LIMIT_AUTH=5
RATE_LIMIT_UPLOAD=10
RATE_LIMIT_ADMIN=100

# =============================================================================
# Security
# CHANGE IN PRODUCTION!
# =============================================================================
SECRET_KEY=dev-secret-key-change-in-production
TOKEN_EXPIRE_MINUTES=1440
